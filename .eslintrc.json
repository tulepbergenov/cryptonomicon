{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "amd": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:vue/vue3-essential",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "vue",
    "prettier"
  ],
  "overrides": [
    {
      "files": ["*.json"],
      "parser": "json-eslint-parser",
      "rules": {
        "prettier/prettier": [
          "error",
          {
            "parser": "json"
          }
        ]
      }
    }
  ],
  "rules": {
    "prettier/prettier": "error",
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
